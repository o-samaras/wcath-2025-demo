{
  "name": "o-samaras/wcath-2025-demo",
  "description": "A demo project, to showcase a basic composer-based WordPress installation.",
  "license": "GPL-2.0-or-later",
  "type": "project",
  "require": {
    "composer/installers": "^2.0",
    "roots/wordpress": "^6.8",
    "wpackagist-plugin/woocommerce": "^10.2",
    "wpackagist-theme/twentytwentyfive": "^1.3"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    },
    "sort-packages": true
  },
  "extra": {
    "installer-paths": {
      "wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "wp"
  },
  "scripts": {
    "post-install-cmd": [
      "@move-wp-config",
      "@cleanup"
    ],
    "post-update-cmd": [
      "@move-wp-config",
      "@cleanup"
    ],
    "move-wp-config": [
      "php -r \"file_exists('wp-config.php') || copy('wp/wp-config-sample.php', 'wp-config.php');\""
    ],
    "cleanup": [
      "rm -rf ./wp/wp-content"
    ]
  }
}
